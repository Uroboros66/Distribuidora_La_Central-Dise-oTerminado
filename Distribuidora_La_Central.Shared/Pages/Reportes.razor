@page "/Reportes"
@inject NavigationManager Navigation

<style>
    .report-card {
        transition: all 0.3s ease;
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        height: 100%;
    }

        .report-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 119, 182, 0.2);
        }

        .report-card .card-body {
            padding: 1.5rem;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9f5ff 100%);
        }

        .report-card .card-title {
            color: #0077b6;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        .report-card .card-icon {
            font-size: 2rem;
            color: #0077b6;
            margin-bottom: 1rem;
        }

    .btn-report {
        background-color: #0077b6;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 0.5rem 1rem;
        transition: all 0.3s;
    }

        .btn-report:hover {
            background-color: #005b8c;
            color: white;
        }

    .page-header {
        background: linear-gradient(90deg, #0077b6 0%, #00a6fb 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 10px 10px;
        box-shadow: 0 4px 12px rgba(0, 119, 182, 0.2);
    }

    .section-title {
        color: #0077b6;
        position: relative;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background-color: #0077b6;
        }
</style>

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-chart-line me-3"></i> Módulo de Reportes</h1>
                <p class="lead mb-0">Acceda a todos los reportes del sistema</p>
            </div>
            
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="section-title">Reportes Generales</h3>
        </div>
    </div>

    <div class="row g-4">
        <!-- Reporte 1 -->
        <div class="col-md-4">
            <div class="report-card card">
                <div class="card-body text-center">
                    <div class="card-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h5 class="card-title">Clientes</h5>
                    <p class="card-text">Listado completo de clientes registrados</p>
                    <button class="btn btn-report" @onclick="RedirigirAReporteClientes">
                        Ver Reporte <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Reporte 2 -->
        <div class="col-md-4">
            <div class="report-card card">
                <div class="card-body text-center">
